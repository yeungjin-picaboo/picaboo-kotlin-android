<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherMoodActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_navbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMood"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutWeahter">

        <ImageButton
            android:id="@+id/imageButtonAngry"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonNervous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonNervous"
            app:srcCompat="@drawable/btn_selector_emotion_angry" />

        <TextView
            android:id="@+id/textViewSunny6"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="angry"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSunny7"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonAngry"
            app:layout_constraintStart_toStartOf="@+id/imageButtonAngry"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonAngry" />

        <ImageButton
            android:id="@+id/imageButtonhappy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonGood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonGood"
            app:srcCompat="@drawable/btn_selector_emotion_happy" />

        <TextView
            android:id="@+id/textViewSunny10"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="happy"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonhappy"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButtonhappy"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonhappy" />

        <ImageButton
            android:id="@+id/imageButtonSick"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="28dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonSad"
            app:layout_constraintStart_toEndOf="@+id/imageButtonSad"
            app:layout_constraintTop_toTopOf="@+id/imageButtonSad"
            app:srcCompat="@drawable/btn_selector_emotion_sick" />

        <TextView
            android:id="@+id/textViewSunny9"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="sick"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonSick"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageButtonSick"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSick" />

        <ImageButton
            android:id="@+id/imageButtonSad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButtonNervous"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.738"
            app:srcCompat="@drawable/btn_selector_emotion_sad" />

        <TextView
            android:id="@+id/textViewSunny8"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="sad"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonSad"
            app:layout_constraintStart_toStartOf="@+id/imageButtonSad"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSad" />

        <ImageButton
            android:id="@+id/imageButtonNeutral"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonBad"
            app:layout_constraintStart_toEndOf="@+id/imageButtonGood"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.399"
            app:srcCompat="@drawable/btn_selector_emotion_neutral" />

        <TextView
            android:id="@+id/textViewSunny2"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="neutral"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonNeutral"
            app:layout_constraintStart_toStartOf="@+id/imageButtonNeutral"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonNeutral" />

        <ImageButton
            android:id="@+id/imageButtonNervous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintStart_toEndOf="@+id/imageButtonAngry"
            app:layout_constraintTop_toTopOf="@+id/imageButtonSad"
            app:srcCompat="@drawable/btn_selector_emotion_nervous" />

        <TextView
            android:id="@+id/textViewSunny7"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="nervous"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@+id/textViewSunny8"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonNervous"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="@+id/imageButtonNervous"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonNervous"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imageButtonConfused"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonBad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonBad"
            app:srcCompat="@drawable/btn_selector_emotion_confused" />

        <TextView
            android:id="@+id/textViewSunny5"
            android:layout_width="58dp"
            android:layout_height="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="confused"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonConfused"
            app:layout_constraintStart_toStartOf="@+id/imageButtonConfused"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonConfused" />

        <TextView
            android:id="@+id/textViewGood"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="good"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonGood"
            app:layout_constraintStart_toStartOf="@+id/imageButtonGood"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonGood" />

        <ImageButton
            android:id="@+id/imageButtonBad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonNeutral"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonConfused"
            app:layout_constraintTop_toTopOf="@+id/imageButtonNeutral"
            app:srcCompat="@drawable/btn_selector_emotion_bad" />

        <TextView
            android:id="@+id/textViewSunny4"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="bad"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imageButtonBad"
            app:layout_constraintStart_toStartOf="@+id/imageButtonBad"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonBad" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="Mood"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonhappy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButtonGood"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/btn_selector_background"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonNeutral"
            app:layout_constraintStart_toEndOf="@+id/imageButtonhappy"
            app:srcCompat="@drawable/btn_selector_emotion_good" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutWeahter"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/layout_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarWeatherMood"
        app:srcCompat="@drawable/btn_selector_emotion_happy">

        <ImageButton
            android:id="@+id/imageButtonSnow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_selector_background"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonCloudy"
            app:layout_constraintHorizontal_bias="0.23"
            app:layout_constraintStart_toEndOf="@+id/imageButtonRainy"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_selector_snow" />

        <ImageButton
            android:id="@+id/imageButtonRainy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_selector_background"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonSnow"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonSnow"
            app:layout_constraintStart_toEndOf="@+id/imageButtonSunny"
            app:layout_constraintTop_toTopOf="@+id/imageButtonSnow"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/btn_selector_rainy" />

        <ImageButton
            android:id="@+id/imageButtonWindy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_selector_background"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonCloudy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonCloudy"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/btn_selector_wind" />

        <ImageButton
            android:id="@+id/imageButtonCloudy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_selector_background"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonSnow"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonWindy"
            app:layout_constraintStart_toEndOf="@+id/imageButtonSnow"
            app:layout_constraintTop_toTopOf="@+id/imageButtonSnow"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/btn_selector_cloudy" />

        <ImageButton
            android:id="@+id/imageButtonSunny"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_selector_background"
            android:padding="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonRainy"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonRainy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonRainy"
            app:srcCompat="@drawable/btn_selector_sun" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="Weather"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageButtonSunny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.604" />

        <TextView
            android:id="@+id/textViewSunny"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="sunny"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewRainy"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSunny"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
            android:id="@+id/textViewRainy"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="rainy"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewSnowy"
            app:layout_constraintStart_toEndOf="@+id/textViewSunny"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSunny"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
            android:id="@+id/textViewSnowy"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:text="snow"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewCloudy"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textViewRainy"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSunny"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
            android:id="@+id/textViewCloudy"
            android:layout_width="40dp"
            android:layout_height="16dp"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="cloudy"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewSnowy"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSunny"
            app:layout_constraintVertical_bias="0.194" />

        <TextView
            android:id="@+id/textViewWindy"
            android:layout_width="38dp"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="windy"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewCloudy"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonSunny"
            app:layout_constraintVertical_bias="0.194" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBarWeatherMood"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:progressBackgroundTint="#EEEEEE"
        android:progressDrawable="@drawable/progressbar"
        android:progressTint="#696D75"
        android:scaleY="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonBack" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="38dp"
        android:layout_height="26dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="#FBFBFB"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/btn_left_arrow" />

    <Button
        android:id="@+id/nextBtnWeatherMood"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/ableButtonColor"
        android:enabled="false"
        android:text="Button"
        android:textColor="@color/ableButtonFontColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayoutMood" />

    <include
        android:id="@+id/bottomMenu6"
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>